<Window x:Class="GPXManager.views.SelectGearWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GPXManager.views"
        mc:Ignorable="d"
        Title="Select gear" Height="408.574" Width="421.691">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Label Content="Select gears"/>
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Margin="10">
            <StackPanel x:Name="panelGears" Margin="10"/>
        </ScrollViewer>
        <WrapPanel Grid.Row="2" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10">
            <Button Content="Cancel" Width="50" Height="25" Click="OnButtonClick" x:Name="buttonCancel"/>
            <Button Content="Ok" Width="50" Height="25" Margin="10 0" Click="OnButtonClick" x:Name="buttonOk"/>

        </WrapPanel>
    </Grid>
</Window>
