<Window x:Class="GPXManager.views.ReviewXMLDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GPXManager.views"
        mc:Ignorable="d"
        Title="ReviewXMLDialog" Height="191.6" Width="324" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="Review XML of downloaded CTX files" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0 10 0 0" FontSize="13" FontWeight="Bold"/>
        
        <WrapPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Cancel" Width="60" Height="30" Margin="5 0" Click="OnButtonClick"/>
            <Button Content="Ok" Width="60" Height="30" Margin="5 0" Click="OnButtonClick" />
        </WrapPanel >
        
        <StackPanel Grid.Row="2" VerticalAlignment="Bottom" HorizontalAlignment="Center">
            <ProgressBar Width="200" Height="15" x:Name="progressBarr"   />
            <Label Content="progress bar label" HorizontalAlignment="Center" x:Name="progressLabel" />
        </StackPanel>
        
        
    </Grid>
</Window>
